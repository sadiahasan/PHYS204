import javax.swing.JFrame;
import javax.swing.JPanel;

import org.knowm.xchart.QuickChart;
import org.knowm.xchart.SwingWrapper;
import org.knowm.xchart.XChartPanel;
import org.knowm.xchart.XYChart;
import org.knowm.xchart.internal.chartpart.Chart;


public class Phys204_P1 {

/*
 *RULES OF THE GAME:  
 *Initial states: player bets 2 dollars
 *Doubles every time head appears
 *when tails appears the game ends :'(
 */


        public static boolean getRandomBoolean() { 
            return Math.random() < 0.5;
            
        }

        public static void main(String[] args) {
        
        double starting_money = 2.00;
        boolean coin;
        double total_winnings = 0;
        
        Double[] winnings = new Double[10000]; 
        //System.out.println("FIRST COIN "+coin);
        
        for(int i=0; i<10; i++){
            coin=getRandomBoolean();
            System.out.println("COIN "+coin);
            while(coin!=true){
                starting_money*=2;
                coin = getRandomBoolean();
                System.out.println("COIN IN LOOP "+coin);
          
            }
         
         winnings[i]=starting_money;
         total_winnings+=winnings[i];
         System.out.println("MONEY FOR GAME "+i+": "+winnings[i]);
         starting_money=2.00;

        }
        double average = total_winnings/10;
        System.out.println(average+"AVERAGE <= total=> "+total_winnings);
        
        }

        
      
}
}